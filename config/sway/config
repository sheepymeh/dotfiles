# xwayland disable

set $mod Mod4
set $term alacritty
set $menu wofi --show drun

output * bg ~/Nextcloud/Archive/Pictues/laptop/waifu2x.png fill
exec swayidle -w \
    timeout 140 'light -O ; light -S 5' \
      resume 'light -I' \
    timeout 150 'swaymsg "output * dpms off"' \
      resume 'swaymsg "output * dpms on"' \
    timeout 160 'swaylock -f' \
    timeout 300 'systemctl suspend' \
   before-sleep 'pgrep -x swaylock >/dev/null || swaylock -f'
exec autotiling

for_window [app_id="firefox"] inhibit_idle fullscreen
for_window [app_id="lollypop"] inhibit_idle open
for_window [app_id="firefox" title="About Mozilla Firefox"] floating enable
for_window [app_id="firefox" title="^Developer Tools — "] floating enable
for_window [app_id="firefox" title="— Sharing Indicator$"] floating enable, sticky enable, move position 0 0, opacity .6
for_window [app_id="firefox" title="Launch Application"] floating enable
for_window [app_id="firefox" title="Picture-in-Picture"] floating enable, sticky enable, opacity .9
for_window [app_id="org.gnome.Solanum"] floating enable, sticky enable, move position 0 0, resize set 300 50
for_window [app_id="thunar" title="File Operation Progress"] floating enable

### Inputs
input "type:keyboard" {
    xkb_layout us,de
    xkb_variant ,nodeadkeys
    xkb_options grp:alt_shift_toggle
    xkb_numlock enabled
}

### Appearance
default_border pixel
# default_floating_border normal
hide_edge_borders none

font pango:Inter, Font Awesome 5 Brands, Font Awesome 5 Free 9

### Key bindings
    bindsym $mod+Return exec $term
    bindsym $mod+q kill
    bindsym $mod+d exec $menu
    floating_modifier $mod normal
    bindsym $mod+Shift+c reload
    bindsym $mod+Shift+r restart
    bindsym $mod+Shift+e exec swaynag -t warning -m 'Do you want to log out?' -b 'Yes, exit sway' 'swaymsg exit'
    bindsym $mod+Shift+s exec systemctl suspend
    bindsym $mod+e exec thunar ~
    bindsym $mod+b exec firefox
    bindsym $mod+m exec MIC=$(pactl list short sources | awk '$2 !~ /monitor/ && /RUNNING$/ { r = 1; print $2; exit } END { exit !r }') && pamixer --source "$MIC" --toggle-mute
    bindsym XF86AudioMicMute exec MIC=$(pactl list short sources | awk '$2 !~ /monitor/ && /RUNNING$/ { r = 1; print $2; exit } END { exit !r }') && pamixer --source "$MIC" --toggle-mute
    bindsym $mod+w output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
    bindsym XF86TouchpadOff exec notify-send "Touchpad disabled" "Press touchpad button to enable"
    bindsym XF86TouchpadOn exec notify-send "Touchpad enabled" "Press touchpad button to disable"

    # Move
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

    # Hardware keys
    exec mkfifo $SWAYSOCK.wob && tail -f $SWAYSOCK.wob | wob --background-color '#383c4ad0' --border-color '#4b5162df' --bar-color '#5294e2df'
    bindsym --locked XF86AudioRaiseVolume exec pamixer -u -i 2 && echo "$(pamixer --get-volume)" >$SWAYSOCK.wob
    bindsym --locked XF86AudioLowerVolume exec pamixer -u -d 2 && echo "$(pamixer --get-volume)" >$SWAYSOCK.wob
    bindsym --locked XF86AudioMute exec pamixer -t && pamixer --get-mute >/dev/null && echo "0" >$SWAYSOCK.wob || echo "$(pamixer --get-volume)" >$SWAYSOCK.wob
    bindsym --locked XF86AudioPlay exec playerctl play-pause
    bindsym --locked XF86AudioNext exec playerctl next
    bindsym --locked XF86AudioPrev exec playerctl previous
    bindsym --locked XF86AudioStop exec playerctl stop

    # Screenshots
    bindsym Print exec grim - | wl-copy
    bindsym Ctrl+Print exec grim "$HOME/Pictures/Screenshot $(date +'%m.%d.%y %T').png"
    bindsym Alt+Print exec grim -g "$(slurp)" - | wl-copy
    bindsym Ctrl+Alt+Print exec grim -g "$(slurp)" "$HOME/Pictures/Screenshot $(date +'%m.%d.%y %T').png"
    bindsym $mod+Print exec record.sh
    bindsym $mod+Shift+Print exec record.sh slurp

    # Workspaces
    set $ws1 1
    set $ws2 2
    set $ws3 3
    set $ws4 4
    set $ws5 5
    set $ws6 6
    set $ws7 7
    set $ws8 8
    set $ws9 9
    bindsym $mod+1 workspace $ws1
    bindsym $mod+2 workspace $ws2
    bindsym $mod+3 workspace $ws3
    bindsym $mod+4 workspace $ws4
    bindsym $mod+5 workspace $ws5
    bindsym $mod+6 workspace $ws6
    bindsym $mod+7 workspace $ws7
    bindsym $mod+8 workspace $ws8
    bindsym $mod+9 workspace $ws9
    bindsym $mod+Ctrl+1 move container to workspace $ws1
    bindsym $mod+Ctrl+2 move container to workspace $ws2
    bindsym $mod+Ctrl+3 move container to workspace $ws3
    bindsym $mod+Ctrl+4 move container to workspace $ws4
    bindsym $mod+Ctrl+5 move container to workspace $ws5
    bindsym $mod+Ctrl+6 move container to workspace $ws6
    bindsym $mod+Ctrl+7 move container to workspace $ws7
    bindsym $mod+Ctrl+8 move container to workspace $ws8
    bindsym $mod+Ctrl+9 move container to workspace $ws9

    # Layout
    # You can "split" the current object of your focus with
    # $mod+h or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+h splith
    bindsym $mod+v splitv

    bindsym $mod+f fullscreen
    bindsym $mod+space floating toggle
    # Swap focus between the tiling area and the floating area
    bindsym $mod+Shift+space focus mode_toggle
    # Move focus to the parent container
    bindsym $mod+a focus parent
    # Move focus to urgent workspaces
    for_window [urgent=latest] focus

    # Move window between screeens
    bindsym $mod+p move workspace to output left
    bindsym $mod+Shift+p move workspace to output right

    # Resizing containers
    mode "resize" {
        bindsym Left resize shrink width 30px
        bindsym Down resize grow height 30px
        bindsym Up resize shrink height 30px
        bindsym Right resize grow width 30px
        bindsym Escape mode "default"
    }
    bindsym $mod+r mode "resize"

### Autostart
exec firefox
exec nextcloud

### Swaybar
bar {
    font pango:Inter, Font Awesome 5 Brands, Font Awesome 5 Free 9
    position bottom
    status_command i3blocks
    separator_symbol " | "
    strip_workspace_numbers yes

    colors {
        background #383c4a
        statusline #efefef
        separator  #7c818c
#                          border  backgr. text
        focused_workspace  #5294e2 #5294e2 #fdfdfd
        active_workspace   #5294e2 #5294e2 #fdfdfd
        inactive_workspace #4b5162 #4b5162 #dfdfdf
#       binding_mode       #383c4a #2C2C2C #F9FAF9
        urgent_workspace   #16a085 #FDF6E3 #E5201D
    }
#    colors {
#        statusline #ffffff
#        background #323232
#        inactive_workspace #32323200 #32323200 #5c5c5c
#    }
}

exec_always {
    gsettings set org.gnome.desktop.interface gtk-theme Arc-Dark
    gsettings set org.gnome.desktop.interface icon-theme Papirus-Dark
    gsettings set org.gnome.desktop.interface font-name 'Inter 9'
    gsettings set org.gnome.desktop.interface monospace-font-name 'JetBrains Mono 9'
}

include /etc/sway/config.d/*
include *.conf
